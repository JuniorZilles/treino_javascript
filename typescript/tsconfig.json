{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        // permite debugar no console do navegador em tempo de execução
        "sourceMap": true
    }, "include": [
        "app/**/*"
    ]
}